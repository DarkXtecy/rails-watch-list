<div class="hero">
  <h1 class="hero-title"><%= @list.name %></h1>
  <p class="hero-subtitle"><%= @list.bookmarks.size %> movies</p>
</div>

<div class="container my-5">
  <h2 class="section-title">Movies in this List</h2>
  <div class="movie-grid">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="movie-card">
        <div class="movie-card-image">
          <img src="https://via.placeholder.com/300x200.png?text=<%= bookmark.movie.title %>" alt="<%= bookmark.movie.title %>" />
        </div>
        <div class="movie-card-content">
          <h3 class="movie-title">
            <%= bookmark.movie.title %>
            <span class="movie-rating">• <%= bookmark.movie.rating %> ⭐</span>
          </h3>
          <p class="movie-comment"><%= bookmark.comment %></p>
          <%= form_with model: bookmark, method: :delete, local: true, class: "inline-form" do |form| %>
            <%= form.submit "Delete", class: "btn btn-danger btn-sm", data: { confirm: "Are you sure?" } %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-success" %>
  <%= link_to "Back to All Lists", lists_path, class: "btn btn-secondary" %>
</div>
